<!-- vim: set sts=2 sw=2 et: -->

<p id="notice"><%= notice %></p>

<h1>Listing locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Postcode</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.lat %></td>
        <td><%= location.lon %></td>
        <td><%= location.postcode.code %></td>
        <td><%= location.active %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
